{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "allowJs": true,
    "module": "ESNext",
    "target": "ESNext",
    "noImplicitAny": false,
    "declaration": true,
    "sourceMap": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "allowSyntheticDefaultImports": true,
    "types": ["unplugin-vue-define-options"]
  },
  "include": ["packages"],
  "exclude": ["node_modules", "**/dist", "**/__tests__/**/*"]
}
